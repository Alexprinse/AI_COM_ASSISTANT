# OpenRouter API key (keep this private; do NOT commit)
VITE_OPENROUTER_API_KEY=
# Default model (can be changed)
VITE_OPENROUTER_MODEL=openrouter/sonoma-sky-alpha

# App metadata for OpenRouter headers
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=AI Email Support

# Backend server & IMAP settings
# Change IMAP_USER to your email address
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=your_email@gmail.com
IMAP_PASS=your_email_password_or_app_specific_password

# Server CORS and port (allow multiple with commas)
CORS_ORIGIN=http://localhost:5173,http://localhost:8080
PORT=8787

# Frontend points to local server
VITE_SERVER_URL=http://localhost:8787

# Google OAuth (Gmail API)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=your_redirect_uri